```

### ğŸ“ `server.js`

```js
const express = require('express');
const mysql = require('mysql2');
const cors = require('cors');
const bodyParser = require('body-parser');

const app = express();
app.use(cors());
app.use(bodyParser.json());

// MySQL connection
const db = mysql.createConnection({
  host: 'localhost',
  user: 'root',
  password: 'yourpassword', // ğŸ”¹ Replace with your MySQL password
  database: 'employee_db'
});

db.connect(err => {
  if (err) throw err;
  console.log('âœ… Connected to MySQL Database!');
});

// Routes

// Get all employees
app.get('/api/employees', (req, res) => {
  db.query('SELECT * FROM employees', (err, results) => {
    if (err) return res.status(500).send(err);
    res.json(results);
  });
});

// Add new employee
app.post('/api/employees', (req, res) => {
  const { name, email, position, salary } = req.body;
  db.query(
    'INSERT INTO employees (name, email, position, salary) VALUES (?, ?, ?, ?)',
    [name, email, position, salary],
    (err, results) => {
      if (err) return res.status(500).send(err);
      res.json({ message: 'âœ… Employee added successfully!' });
    }
  );
});

// Update employee
app.put('/api/employees/:id', (req, res) => {
  const { id } = req.params;
  const { name, email, position, salary } = req.body;
  db.query(
    'UPDATE employees SET name=?, email=?, position=?, salary=? WHERE id=?',
    [name, email, position, salary, id],
    (err, results) => {
      if (err) return res.status(500).send(err);
      res.json({ message: 'âœ… Employee updated successfully!' });
    }
  );
});

// Delete employee
app.delete('/api/employees/:id', (req, res) => {
  const { id } = req.params;
  db.query('DELETE FROM employees WHERE id=?', [id], (err, results) => {
    if (err) return res.status(500).send(err);
    res.json({ message: 'ğŸ—‘ï¸ Employee deleted successfully!' });
  });
});

app.listen(3000, () => console.log('ğŸš€ Server running on http://localhost:3000'));
```

